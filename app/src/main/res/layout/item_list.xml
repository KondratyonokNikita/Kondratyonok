<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_holder"
    android:orientation="vertical">

    <com.kondratyonok.kondratyonok.custom.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/launcher_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_offset"
        android:layout_alignParentStart="true"
        android:background="@drawable/oval" />

    <TextView
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_offset"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/launcher_image"
        android:textIsSelectable="false"
        tools:text="Header"/>

    <TextView
        android:id="@+id/qaz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/color"
        android:layout_below="@+id/color"
        android:textSize="16sp"
        android:lines="3"
        android:textIsSelectable="false"
        tools:text="Description" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/launcher_image"
        android:layout_alignStart="@id/color"/>
</RelativeLayout>
