<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.kondratyonok.kondratyonok.launcher.SquareView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/launcher_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/oval" />

    <TextView
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_offset"
        android:layout_marginBottom="@dimen/item_offset"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/launcher_image" />

    <TextView
        android:id="@+id/qaz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/color"
        android:layout_below="@+id/color"
        android:textSize="20sp"
        android:text=""/>
</RelativeLayout>
