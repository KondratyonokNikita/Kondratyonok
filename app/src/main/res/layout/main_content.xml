    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/main"
    android:background="@mipmap/launcher_collapsing_toolbar">

    <com.kondratyonok.kondratyonok.custom.VerticalViewPager
